{
  "name": "@layer0/cli",
  "version": "3.16.3",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp package.json README.md ./dist; babel src -d dist",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "test": "jest",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^2.4.2",
    "conf": "^6.1.0",
    "cross-spawn": "^7.0.3",
    "decode-uri-component": "^0.2.0",
    "execa": "^3.2.0",
    "filesize": "^6.0.1",
    "form-data": "^2.5.1",
    "fs-extra": "^8.1.0",
    "git-url-parse": "^11.1.2",
    "globby": "^10.0.1",
    "import-local": "^3.0.2",
    "is-ci": "^2.0.0",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.27",
    "open": "^7.0.0",
    "ora": "^4.0.3",
    "prompts": "^2.2.1",
    "resolve-package-path": "^2.0.0",
    "semver": "^7.3.5",
    "simple-git": "^1.126.0",
    "slash": "^3.0.0",
    "terminal-link": "^2.1.1",
    "tmp-promise": "^2.0.2",
    "ws": "^7.2.0",
    "yargs": "^14.2.0",
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@layer0/core": "^3.16.3",
    "@layer0/next": "^3.16.3"
  },
  "bin": {
    "0": "./index.js",
    "layer0": "./index.js"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/frameworks/**/*.{js,jsx}",
      "./src/serverless/**/*.{js,jsx}",
      "./src/utils/**/getEntryPoint.js",
      "!**/test/**",
      "!**/index.js"
    ],
    "moduleNameMapper": {
      "^@layer0/core(.*)$": "<rootDir>/../core/src/$1"
    }
  }
}
