{
  "name": "@layer0/react",
  "version": "3.16.3",
  "license": "Apache-2.0",
  "dependencies": {
    "react-merge-refs": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md ./dist; babel src -d dist",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next",
    "test": "jest"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx}",
      "!**/mocks/**",
      "!**/index.js"
    ],
    "moduleNameMapper": {
      "^@layer0/core(.*)$": "<rootDir>/../core/src/$1",
      "^@layer0/next(.*)$": "<rootDir>/../next/src/$1",
      "^@layer0/react(.*)$": "<rootDir>/../react/src/$1"
    },
    "setupFiles": [
      "./test/config/setup.js"
    ]
  },
  "publishConfig": {
    "directory": "dist"
  },
  "devDependencies": {
    "@layer0/prefetch": "^3.16.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  }
}
